label(for="titolo") Titolo: 
input(type="text" name="titolo" placeholder="Titolo" value=(article ? article.titolo : '') required maxlength="25")

label(for="corpo") Testo articolo:
if (article)
    img(src=`/img/${article.srcImg}`, alt="Immagine articolo")
textarea(name="corpo" rows="10" cols="40" placeholder="Scrivi qui..." style="resize: none" required)= article ? article.corpo : ''
if (!article) 
    input(type="file" name="immagine" accept="image/*.jpg,png,jpeg" required)

input(type="submit" value="Pubblica")

