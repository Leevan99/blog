extends layout

block page 
    - var menu = "post"
    - var pageTitle = "Pubblica"

block content 
    form(action="/admin/post", method="post")
        label(for="titolo") Titolo: 
        input(type="text" name="titolo" placeholder="Titolo" required)
        label(for="corpo") Testo articolo:
        textarea(name="corpo" rows="10" cols="40" placeholder="Scrivi qui..." style="resize: none" required)
        input(type="submit", value="Pubblica")