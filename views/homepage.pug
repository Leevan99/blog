extends layout 

block page 
    - var pageTitle = 'homepage'
    - var menu = 'home'
block content 
    if (!articles)
        | Non ci sono articoli pubblicati al momento.
        | Pubblica tu per primo effettuando il:&nbsp;
        a(href="/login") login 
    else 
        .articoli 
            each article in articles
                .articolo
                    h2= article.titolo
                    div 
                        p= article.corpo
                        .autore
                            p Autore:&nbsp;
                            p= article.autore  